<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="create_role_action" model="ir.actions.act_window">
        <field name="name">Create Role</field>
        <field name="res_model">create.role</field>
        <field name="binding_model_id" ref="project.model_project_task"/>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <record id="create_role_wizard" model="ir.ui.view">
        <field name="name">create.role.wizard</field>
        <field name="model">create.role</field>
        <field name="arch" type="xml">
            <form string="Create role">
                <group>
                    <field name="date_creation_role" />
                    <field name="project_task_id" />
                </group>
                <footer>
                    <button string="Valider" name="validate_create_role" type="object" class="btn-primary"/>
                    <button string="Annuler" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

</odoo>
